@page "{id}"
@model TRHDipComp_Project.Pages.ShowProgrammeDetailsModel
@{
    ViewData["Title"] = "Show Programme Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Show Programme Details</h2>

@if (RouteData.Values["id"] != null)
{
    @RouteData.Values["id"]
}
else
{
    <h2>Routing page, no ID routed </h2>
}

@{
    <div class="container">
        <h3>Programme details</h3>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Programme ID</th>
                    <th>Programme Name</th>
                    <th>Programme Description</th>
                    <th>Programme QQI Level</th>
                    <th>Programme Credits</th>
                    <th>Programme Cost</th>
                    <th>Update Programme</th>
                    <th>Delete Programme</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.Programme.ProgrammeID</td>
                    <td>@Model.Programme.ProgrammeName</td>
                    <td>@Model.Programme.ProgrammeDescription</td>
                    <td>@Model.Programme.ProgrammeQQILevel</td>
                    <td>@Model.Programme.ProgrammeCredits</td>
                    <td>@Model.Programme.ProgrammeCost</td>                    
                    <td><a asp-page="/UpdateProgrammeDetails" asp-route-id="@Model.Programme.ProgrammeID">Edit Programme</a></td>
                    <td><a asp-page="/DeleteProgramme" asp-route-id="@Model.Programme.ProgrammeID">Delete Programme</a></td>
                </tr>

            </tbody>
        </table>
    </div>
}
<br />

<a asp-page="/Index">Home</a>
