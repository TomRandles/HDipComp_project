@page "{id}"
@model TRHDipComp_Project.Pages.DeleteProgrammeModel
@{
    ViewData["Title"] = "DeleteProgramme";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 class="text-center">Delete Programme @Model.Programme.ProgrammeName </h2>
    </div>
    <div class="col-md-4"></div>
</div>
<br />

<script>
    function UserDeleteConfirmation() {
        return confirm("Confirm delete");
    }
</script>

<form method="post">
    <input type="hidden" asp-for=Programme.ProgrammeID>
    <button type="submit" class="btn btn-default" OnClick="UserDeleteConfirmation()">Delete programme @Model.Programme.ProgrammeName </button>
</form>

