@page "{id}"
@model TRHDipComp_Project.Pages.DeleteAssessmentModel
@{
    ViewData["Title"] = "Delete Assessment";
}

<br />
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 class="text-center">Delete Assessment @Model.Assessment.AssessmentName </h2>
        <h4 class="text-center">@Model.Assessment.AssessmentName </h4>
    </div>
    <div class="col-md-4"></div>
</div>
<br />

<script type="text/javascript">
    function UserDeleteConfirmation() {
        return confirm("Confirm delete");
    }
</script>

<form method="post">
    <input type="hidden" asp-for=Assessment.AssessmentID>
    <button type="submit" class="btn btn-default" OnClick="UserDeleteConfirmation()">Delete assessment @Model.Assessment.AssessmentName </button>
</form>
