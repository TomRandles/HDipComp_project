@page "{id}"
@model TRHDipComp_Project.Pages.ShowModuleDetailsModel
@{
    ViewData["Title"] = "ShowModuleDetails";
}

<br />
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 class="text-center">Show Module Details</h2>
    </div>
    <div class="col-md-4"></div>
</div>
<br />

<div class="container">
    <table class="table table-bordered table-hover table-condensed table-functions-grad">
        <thead>
            <tr>
                <th>Module ID</th>
                <th>Module Name</th>
                <th>Module Description</th>
                <th>Module Credits</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Module.ModuleID</td>
                <td>@Model.Module.ModuleName</td>
                <td>@Model.Module.ModuleDescription</td>
                <td>@Model.Module.ModuleCredits</td>
                <td><a asp-page="/UpdateModuleDetails" asp-route-id="@Model.Module.ModuleID">Edit Module</a></td>
                <td><a asp-page="/DeleteModule" asp-route-id="@Model.Module.ModuleID">Delete Module</a></td>
            </tr>
        </tbody>
    </table>
    <br />
    <br />
    <h3>Module assessment details</h3>
    <table class="table table-bordered table-hover table-condensed table-functions-grad">
        <thead>
            <tr>
                <th>Assessment ID</th>
                <th>Assessment Name</th>
                <th>Assessment Description</th>
                <th>Assessment type</th>
                <th>Assessment Total Marks</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                var assessmentsForThisModule = Model.AssessmentList.Where(
                                                  a => a.ModuleID == Model.Module.ModuleID)
                                                        .Select(a => a);

                foreach (var assess in assessmentsForThisModule)
                {

                    <tr>
                        <td>@assess.AssessmentID</td>
                        <td>@assess.AssessmentName</td>
                        <td>@assess.AssessmentDescription</td>
                        <td>@assess.AssessmentType</td>
                        <td>@assess.AssessmentTotalMark</td>
                        <td><a asp-page="/UpdateAssessmentDetails" asp-route-id="@assess.AssessmentID">Edit Assessment</a></td>
                        <td><a asp-page="/DeleteAssessment" asp-route-id="@assess.AssessmentID">Delete Assessment</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<br />

<a asp-page="/Index">Home</a>
