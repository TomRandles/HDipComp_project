@page "{id}"
@model TRHDipComp_Project.Pages.DeleteAssessmentResultModel
@{
    ViewData["Title"] = "DeleteAssessmentResult";
}

<br />
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 class="text-center">Delete Assessment Result</h2>
    </div>
    <div class="col-md-4"></div>
</div>
<br />

<script>
    function UserDeleteConfirmation() {
        return confirm("Confirm delete");
    }
</script>

<form method="post">
    <input type="hidden" asp-for=AssessmentResult.AssessmentResultID>
    <button type="submit" class="btn btn-default" OnClick="UserDeleteConfirmation()">Delete AssessmentResult @Model.AssessmentResult.AssessmentResultID</button>
</form>