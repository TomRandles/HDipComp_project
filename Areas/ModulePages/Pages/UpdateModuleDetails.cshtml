@page "{id}"
@model TRHDipComp_Project.Areas.ModulePages.Pages.UpdateModuleDetailsModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update Module Details";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2 class="text-center">Update Module Details</h2>
        </div>
        <div class="col-md-4"></div>
    </div>
    <br />

    <div class="container">
        <form method="post" class="form-horizontal">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="form-group col-md-3">
                    <label asp-for=Module.ModuleID class="control-label font-weight-bold"></label>
                    <input type="text" asp-for=Module.ModuleID class="form-control">
                    <span asp-validation-for=Module.ModuleID></span>
                </div>
                <div class="col-md-5"></div>
            </div>

            <div class="row">
                <div class="col-md-4"></div>
                <div class="form-group col-md-3">
                    <label asp-for=Module.ModuleName class="control-label font-weight-bold"></label>
                    <input type="text" asp-for=Module.ModuleName class="form-control">
                    <span asp-validation-for=Module.ModuleName></span>
                </div>
                <div class="col-md-5"></div>
            </div>

            <div class="row">
                <div class="col-md-4"></div>
                <div class="form-group col-md-3">
                    <label asp-for=Module.ModuleDescription class="control-label font-weight-bold"></label>
                    <textarea type="text" asp-for=Module.ModuleDescription class="form-control" rows="2"></textarea>
                    <span asp-validation-for=Module.ModuleDescription></span>
                </div>
                <div class="col-md-5"></div>
            </div>

            <div class="row">
                <div class="col-md-4"></div>
                <div class="form-group col-md-3">
                    <label asp-for=Module.ModuleCredits class="control-label font-weight-bold"></label>
                    <input type="text" asp-for=Module.ModuleCredits class="form-control">
                    <span asp-validation-for=Module.ModuleCredits></span>
                </div>
                <div class="col-md-5"></div>
            </div>

            @*Add module to an existing programme*@
            @* Dropdown for existing programmes that the student may select.*@

            <div class="row">
                <div class="col-md-4"></div>
                <div class="form-group col-md-3">
                    <label asp-for=ProgrammeModule.ProgrammeID class="control-label font-weight-bold">Programme options:</label>
                    <select class="form-control" asp-for=ProgrammeModule.ProgrammeID>

                        @{
                            if (Model.ProgrammeListOptions != null)
                            {
                                foreach (var prog in Model.ProgrammeListOptions)
                                {
                                    <option value=@prog.ProgrammeID>@prog.ProgrammeName</option>
                                }
                            }
                        }

                    </select>
                </div>
                <div class="col-md-5"></div>
            </div>
            <br />

            <div class="row">
                <div class="col-md-4"></div>
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-primary">Enter details</button>
                </div>
                <div class="col-md-5"></div>
            </div>
            <br />
        </form>
    </div>
</div>