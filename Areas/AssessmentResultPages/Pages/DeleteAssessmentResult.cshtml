@page "{id}"

@model TRHDipComp_Project.Areas.AssessmentResultPages.Pages.DeleteAssessmentResultModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DeleteAssessmentResult";
}

<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h2 class="text-center"><strong>Delete Assessment Result</strong> <br /> @Model.AssessmentResult.AssessmentResultID</h2>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<br />
<div class="container">
    <div class="col-md-4"></div>

    <form method="post">
        <br />
        <br />
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <input type="hidden" asp-for=AssessmentResult.AssessmentResultID>
                <button type="submit" class="btn btn-primary" OnClick="UserDeleteConfirmation()"><strong>Delete Assessment Result</strong> <br /> @Model.AssessmentResult.AssessmentResultID</button>
            </div>
            <div class="col-md-1"></div>
        </div>
        <br />
        <br />
    </form>
    <div class="col-md-4"></div>
</div>

<script>
    function UserDeleteConfirmation() {
        return confirm("Confirm delete");
    }
</script>
