@page "{id}"
@model TRHDipComp_Project.Areas.ProgrammePages.Pages.DeleteProgrammeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Programme";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2 class="text-center"> Delete Programme</h2>
            <h4 class="text-center"> @Model.Programme.ProgrammeName</h4>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<div class="container">
    <div class="col-md-4"></div>

    <form method="post">
        <br />
        <br />
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <input type="hidden" asp-for=Programme.ProgrammeID>
                <button type="submit" class="btn btn-primary" OnClick="UserDeleteConfirmation()"><strong>Delete programme</strong> <br /> @Model.Programme.ProgrammeName</button>
            </div>
            <div class="col-md-1"></div>
        </div>
        <br />
        <br />
    </form>
    <div class="col-md-4"></div>
</div>


<script>
    function UserDeleteConfirmation() {
        return confirm("Confirm delete");
    }
</script>