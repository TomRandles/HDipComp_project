@page
@model TRHDipComp_Project.Areas.ProgrammePages.Pages.ListProgrammesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "List Programmes";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="text-center">Current Programmes</h2>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<br />

@{
    if ((Model.ProgrammeList != null) && (Model.ProgrammeList.Count != 0))
    {
    <div class="container">
        <br />
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <table class="table table-sm table-bordered table-hover table-striped table-condensed table-functions-grad">
                <thead>
                    <tr>
                        <th>Programme ID</th>
                        <th>Programme Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var prog in Model.ProgrammeList)
                        {
                            <tr>
                                <td>@prog.ProgrammeID</td>
                                <td><a asp-page="/ShowProgrammeDetails" asp-area="ProgrammePages" asp-route-id="@prog.ProgrammeID">@prog.ProgrammeName</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
        <div class="col-md-3"></div>
    </div>
    }
}
<br />
<a asp-page="/Index">Home</a>